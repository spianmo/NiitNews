<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="60dp"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_dot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="3dp"
        android:src="@drawable/ucrop_oval_true" />

    <ImageView
        android:id="@+id/iv_photo"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@id/iv_dot"
        android:layout_margin="3dp"
        android:scaleType="centerCrop" />

    <ImageView
        android:id="@+id/iv_video"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@id/iv_dot"
        android:layout_margin="3dp"
        android:background="@color/ucrop_color_ec"
        android:scaleType="centerInside"
        android:src="@drawable/ucrop_ic_default_video"
        android:visibility="gone" />


    <TextView
        android:id="@+id/tv_gif"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@id/iv_photo"
        android:layout_alignBottom="@id/iv_photo"
        android:background="@drawable/ucrop_gif_bg"
        android:text="@string/ucrop_gif_tag"
        android:textColor="@color/ucrop_color_widget_active"
        android:textSize="9sp"
        android:visibility="gone" />
</RelativeLayout>